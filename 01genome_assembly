cd ../gap_closing_hifiasm_flye 
/netscratch/dep_mercier/grp_mercier/software/software_installpackages/MaSuRCA-4.1.0/bin/close_scaffold_gaps.sh -r ../gap_closing_hifiasm/Db-1.ragoo.gapclosing_reads_hifiasm.fasta -q ../../../02Flye_out00/assembly.fasta -t 8 -d asm -m 2500 -o 10000 > nohup.run_close_scaffold_gaps.3.log 2>&1 
