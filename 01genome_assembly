#scaffolding
cd ../genome_assembly/Db-1/04quickmerge_out000 
ln -sf /netscratch/dep_mercier/grp_mercier/Projects/PanGenome_of_Arabidopsis/ref_genome/t2t-col.20210610.fasta . 
ragoo.py -t 20 -R /netscratch/dep_mercier/grp_mercier/Projects/PanGenome_of_Arabidopsis/raw_data/batch1/5129_A.hifi_reads.fastq.gz -T corr -C ./Db-1.canu_flye_hifiasm.merged.fasta ./t2t-col.20210610.fasta 
